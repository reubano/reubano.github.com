extends base
include _mixins/navbar
include _mixins/aside
include _mixins/utils
include _mixins/blog-excerpt

block title
  include _partials/title

block nav
  +navbar(page.name)

block content
  include _partials/collection-breadcrumb

  #category
    h1(class='category-title non-mobile')= page.title
    .excerpts
      div(class='category-tags non-mobile')
        +list-tags(tags_by_collection(blog))

      .category-items
        if blog.pagination
          for post in page.data
            +blog-excerpt(post)
        else
          for post in blog.data
            +blog-excerpt(post)

block aside
  aside
    +get-featured(blog, blog.count)

block paginator
  include _partials/paginator
