extends base
include _mixins/navbar
include _mixins/aside
include _mixins/utils
include _mixins/blog-excerpt

block title
  include _partials/title

block nav
  +navbar(page.name)

block content
  include _partials/collection-breadcrumb

  #category
    h1.category-title= page.title
    .excerpts
      if blog.pagination
        for post in page.data
          +blog-excerpt(post)
      else
        for post in blog.data
          +blog-excerpt(post)

block aside
  aside
    +get-featured(blog, 5)
    +get-recent(blog, 5)
    +get-random(blog, 5)

block paginator
  include _partials/paginator
