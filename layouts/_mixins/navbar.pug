mixin navbar(cur)
  nav#topnav(role='navigation')
    #mobile-navbar.container
      h1
        a(href=site.url, class={active: cur == site.name})= site.name

      .mobile-nav
        button(class='hamburger hamburger--squeeze', type='button', aria-label='Menu', aria-controls='navigation')
          span.hamburger-box
            span.hamburger-inner
          // span.hamburger-label Menu

    div(id='navbar', class='container hidden-slow')
      h1
        a(href=site.url, class={active: cur == site.name})= site.name

      ul.nav-list
        each page in pages.data
          - var pageURL = url_for(page.name)
          li
            a(href=pageURL, class={active: cur == page.name})= page.name

        each category in collections
          if category.show
            - var catURL = url_for(category.name)
            li
              a(href=catURL, class={active: cur == category.name})= category.name

    //input#search-input(type='search', placeholder='Search...')
